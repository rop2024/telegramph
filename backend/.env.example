# Backend .env.example
PORT=5000
NODE_ENV=development

# MongoDB (local or Atlas)
MONGODB_URI=mongodb://localhost:27017/telegraph_dev

# JWT
JWT_SECRET=replace_with_a_secure_random_string

# Firebase (optional)
# Provide a path to a Firebase service account JSON file if required by your app
FIREBASE_SERVICE_ACCOUNT=./firebase-service-account.json

# Email configuration (Gmail OAuth2 preferred for production)
GMAIL_USER=you@gmail.com
GMAIL_CLIENT_ID=your_google_client_id
GMAIL_CLIENT_SECRET=your_google_client_secret
GMAIL_REFRESH_TOKEN=your_google_refresh_token

# SMTP fallback
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=you@gmail.com
SMTP_PASS=your_smtp_password_or_app_password
